---

import { Image } from 'astro:assets';
import Logo from '../assets/icons/CCC-logo-full.svg';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
---

<header class="container-lg" id="header">
  <nav class="navigation">
    <div class="navigation__inner flex justify-between 1070:justify-end items-start">
      <Logo class="navigation__logo w-48 h-auto" alt="Cozy Cocktail Collective Logo"/>
      
      <div class="navigation__list" id="navList">
        <div class="flex flex-col 1070:flex-row">
          <a href="/" class="navigation__link">O nas</a>
          <a href="/about" class="navigation__link">Co robimy</a>
          {currentPath === '/' ? (
            <a href="#projects" class="navigation__link">Realizacje</a>
          ) : (
            <a href="/#projects" class="navigation__link">Realizacje</a>
          )}
          <a href="#contact" class="navigation__link">Kontakt</a>
        </div>

        <div class="navigation__list--social">
          <a 
            href="https://www.instagram.com/cozycocktailcollective/" 
            target="_blank" 
            rel="noopener noreferrer"
          >
            Instagram
          </a>
          <a 
            href="https://www.facebook.com/cozycocktailcollective" 
            target="_blank" 
            rel="noopener noreferrer"
          >
            Facebook
          </a>
        </div>
      </div>

      <button class="burger burger-main" id="burgerBtn" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </nav>
</header>

<style>
  .navigation {
    padding: 2rem 0;
    position: relative;
    z-index: 50;
  }

  .navigation__inner {
    position: relative;
  }

  .navigation__logo {
    z-index: 51;
  }

  .navigation__list {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    background: #8B4049;
    padding: 6rem 2rem;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    z-index: 50;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .navigation__list.open {
    transform: translateX(0);
  }

  @media (min-width: 1070px) {
    .navigation__list {
      position: static;
      width: auto;
      height: auto;
      background: transparent;
      padding: 0;
      transform: none;
      flex-direction: row;
      align-items: center;
      gap: 2rem;
    }
  }

  .navigation__link {
    color: #F5E6D3;
    text-decoration: none;
    font-size: 1.5rem;
    padding: 0.5rem 0;
    transition: opacity 0.2s;
  }

  .navigation__link:hover {
    opacity: 0.7;
  }

  @media (min-width: 1070px) {
    .navigation__link {
      font-size: 1rem;
      padding: 0;
    }
  }

  .navigation__list--social {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .navigation__list--social a {
    color: #F5E6D3;
    text-decoration: none;
    font-size: 1rem;
  }

  @media (min-width: 1070px) {
    .navigation__list--social {
      flex-direction: row;
      margin-top: 0;
      margin-left: 2rem;
      padding-left: 2rem;
      border-left: 1px solid rgba(245, 230, 211, 0.3);
    }
  }

  .burger {
    position: relative;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 51;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 0;
  }

  .burger span {
    width: 2rem;
    height: 0.25rem;
    background: #F5E6D3;
    border-radius: 10px;
    transition: all 0.3s linear;
    position: relative;
    transform-origin: 1px;
  }

  .burger.open span:nth-child(1) {
    transform: rotate(45deg);
  }

  .burger.open span:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
  }

  .burger.open span:nth-child(3) {
    transform: rotate(-45deg);
  }

  @media (min-width: 1070px) {
    .burger {
      display: none;
    }
  }
</style>

<script>
  const burger = document.getElementById('burgerBtn');
  const navList = document.getElementById('navList');

  if (burger && navList) {
    burger.addEventListener('click', () => {
      burger.classList.toggle('open');
      navList.classList.toggle('open');
      document.body.style.overflow = navList.classList.contains('open') ? 'hidden' : '';
    });

    // Close menu on link click
    const links = navList.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        burger.classList.remove('open');
        navList.classList.remove('open');
        document.body.style.overflow = '';
      });
    });
  }

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      const href = this.getAttribute('href');
      if (!href || href === '#') return;

      const target = document.querySelector(href);
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Navbar background on scroll
  const header = document.getElementById('header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 100) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });
</script>